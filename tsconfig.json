{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "dist",
		"target": "es6",
		"typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
		"removeComments": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"]
}
